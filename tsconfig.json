  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDirs": ["src"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "moduleResolution": "NodeNext"
  },
  "include": [
    "./src"
  ]
}